{
  "extends": "./tsconfig.json", 
  "compilerOptions": {
    
    "module": "NodeNext",     
    "moduleResolution": "NodeNext",
    
    "outDir": "dist",         
    "target": "es2020",       
    "noEmit": false,          
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["server.ts"], 
  "exclude": ["node_modules", ".next", "src"]
}